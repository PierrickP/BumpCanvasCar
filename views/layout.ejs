  <body>
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
		<div class="container">
		  <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		  </a>
		  <a class="brand" href="/"><%= title %></a>
		  <div class="nav-collapse row">
			<ul class="nav">
			  <li class="active"><a href="/">Home</a></li>
			  <li ><a href="/players">Players</a></li>
			  <li ><a href="/play">Play !</a></li>
			  <li><a href="/about">About</a></li>
			  <li><a href="/contact">Contact</a></li>
			</ul>
			<% if( session.name ) { %> 
			<ul class="nav perso">
				<li><a href="/me"><%= session.name %> </a></li>
				<li><a href="/logout">(Logout)</a></li>
			<ul>
			<% } else {%>
			<ul class="nav perso">
				<form class="form-inline" method="post" action="/login">
				  <input type="text" class="input-small" id="login" name="user[login]">
				  <input type="password" class="input-small" id="password" name="user[password]">
				  <button type="submit" class="btn btn-success">Sign in</button>
				  <a class="btn" href="/registration">Registration</a>
				</form>
				
			</ul>
			<% } %>
		  </div><!--/.nav-collapse -->
		</div>
	  </div>
	</div>
	
